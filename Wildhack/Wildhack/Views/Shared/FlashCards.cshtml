@model Wildhack.Models.Word
@using Wildhack.Models;


<li class="sticker-post sticker-Ask" id="listicker-@Model.ID">
    <div class="sticker" ontouchstart="this.classList.toggle('hover');">
        <div class="flipper">
            <div class="front">
                <div class="row popup-clickable" onclick="popupOpen(@Model.ID);" data-type="post">
                    <h2 class="ellipsis" style="-webkit-line-clamp: 2; text-align: center; text-transform: uppercase; margin-top: 75px;">
                        @Model.Content
                    </h2>
                </div>
            </div>
            <div class="back">
                <table class="nopadding" style="width: 100%; height: 100%; margin: 5px;">
                    <tr>
                        <td style="vertical-align: top;">
                            <h5 style="background: #49496E;">
                                @Model.Content
                            </h5>
                            <p style="overflow: auto; max-height: 60%;">
                                @Model.Translation
                            </p>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </div>
</li>

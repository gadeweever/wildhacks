@model Wildhack.Models.Article
@using Wildhack.Models;

@{
    ViewBag.Title = "PenPal";

    int num = 1+ @Model.ID;
}

<!-- Bootstrap Core CSS -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet">

<!-- Custom CSS -->
<link href="~/Content/business-casual.css" rel="stylesheet">

<!-- Bootstrap Switch -->
